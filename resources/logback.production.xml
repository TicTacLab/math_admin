<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="R" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/log/malt_admin/malt_admin.log</File>
        <encoder>
            <pattern>%5p | %d | [%t] ||| %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>1</maxIndex>
            <FileNamePattern>/var/log/malt_admin/malt_admin.log.%i</FileNamePattern>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100KB</MaxFileSize>
        </triggeringPolicy>
    </appender>


    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/log/malt_admin/audit.log</File>
        <encoder>
            <pattern>%d: %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/malt_admin/audit.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="R"/>
    </root>

   <logger name="malt-admin.audit" additivity="false" level="INFO">
        <appender-ref ref="AUDIT"/>
    </logger>

</configuration>
